<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 300">
  <defs>
    <linearGradient id="socialBg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#8d6e63;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#6d4c41;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="400" height="300" fill="url(#socialBg)"/>
  
  <!-- South African flag -->
  <g transform="translate(50, 50)">
    <rect x="0" y="0" width="60" height="40" fill="#007749"/>
    <polygon points="0,0 20,20 0,40" fill="#000"/>
    <polygon points="0,0 25,0 25,8 8,8" fill="#de3831"/>
    <polygon points="0,32 8,32 25,32 25,40" fill="#002395"/>
    <polygon points="20,20 60,0 60,8 28,20 60,32 60,40" fill="#ffb612"/>
    <polygon points="20,20 60,8 60,32" fill="#fff"/>
  </g>
  
  <!-- Map of South Africa outline -->
  <g transform="translate(250, 80)">
    <path d="M0 40 Q10 30 20 35 Q35 25 50 30 Q65 20 80 25 Q90 30 95 40 Q100 50 95 60 Q90 70 80 75 Q70 80 60 75 Q50 80 40 75 Q30 80 20 75 Q10 70 5 60 Q0 50 0 40 Z" fill="#4caf50" stroke="#2e7d32" stroke-width="2"/>
    <circle cx="30" cy="55" r="2" fill="#f44336"/>
    <text x="30" y="70" font-family="Arial, sans-serif" font-size="8" fill="#fff" text-anchor="middle">Cape Town</text>
    <circle cx="70" cy="50" r="2" fill="#f44336"/>
    <text x="70" y="40" font-family="Arial, sans-serif" font-size="8" fill="#fff" text-anchor="middle">Johannesburg</text>
  </g>
  
  <!-- Historical timeline -->
  <line x1="50" y1="180" x2="350" y2="180" stroke="#fff" stroke-width="3"/>
  <circle cx="80" cy="180" r="5" fill="#ff9800"/>
  <circle cx="150" cy="180" r="5" fill="#ff9800"/>
  <circle cx="220" cy="180" r="5" fill="#ff9800"/>
  <circle cx="290" cy="180" r="5" fill="#ff9800"/>
  
  <text x="80" y="200" font-family="Arial, sans-serif" font-size="10" fill="#fff" text-anchor="middle">San People</text>
  <text x="150" y="200" font-family="Arial, sans-serif" font-size="10" fill="#fff" text-anchor="middle">Iron Age</text>
  <text x="220" y="200" font-family="Arial, sans-serif" font-size="10" fill="#fff" text-anchor="middle">Colonial</text>
  <text x="290" y="200" font-family="Arial, sans-serif" font-size="10" fill="#fff" text-anchor="middle">Democracy</text>
  
  <!-- Rock art -->
  <g transform="translate(30, 120)">
    <rect x="0" y="0" width="40" height="30" fill="#d7ccc8" stroke="#8d6e63" stroke-width="2"/>
    <path d="M5 20 Q10 15 15 20 Q20 25 25 20 Q30 15 35 20" stroke="#8d4a47" stroke-width="2" fill="none"/>
    <circle cx="10" cy="10" r="2" fill="#8d4a47"/>
    <circle cx="30" cy="8" r="2" fill="#8d4a47"/>
    <text x="20" y="45" font-family="Arial, sans-serif" font-size="8" fill="#fff" text-anchor="middle">Rock Art</text>
  </g>
  
  <!-- Traditional hut -->
  <g transform="translate(320, 120)">
    <circle cx="15" cy="20" r="15" fill="#8d6e63"/>
    <polygon points="15,5 25,20 5,20" fill="#ffeb3b"/>
    <rect x="12" y="15" width="6" height="10" fill="#5d4037"/>
    <text x="15" y="45" font-family="Arial, sans-serif" font-size="8" fill="#fff" text-anchor="middle">Traditional</text>
  </g>
  
  <!-- Compass -->
  <circle cx="150" cy="120" r="20" fill="#fff"/>
  <circle cx="150" cy="120" r="18" fill="#333"/>
  <text x="150" y="105" font-family="Arial, sans-serif" font-size="10" fill="#fff" text-anchor="middle">N</text>
  <text x="165" y="125" font-family="Arial, sans-serif" font-size="8" fill="#fff" text-anchor="middle">E</text>
  <text x="150" y="140" font-family="Arial, sans-serif" font-size="8" fill="#fff" text-anchor="middle">S</text>
  <text x="135" y="125" font-family="Arial, sans-serif" font-size="8" fill="#fff" text-anchor="middle">W</text>
  <polygon points="150,110 155,120 150,125 145,120" fill="#f44336"/>
  
  <!-- Mountains -->
  <polygon points="180,60 200,30 220,60" fill="#795548" opacity="0.8"/>
  <polygon points="200,60 220,35 240,60" fill="#8d6e63" opacity="0.8"/>
  <polygon points="160,60 180,40 200,60" fill="#6d4c41" opacity="0.8"/>
  <text x="200" y="75" font-family="Arial, sans-serif" font-size="10" fill="#fff" text-anchor="middle">Drakensberg</text>
  
  <!-- Cultural symbols -->
  <g transform="translate(80, 230)">
    <circle cx="0" cy="0" r="8" fill="#ff9800"/>
    <circle cx="15" cy="0" r="8" fill="#4caf50"/>
    <circle cx="30" cy="0" r="8" fill="#f44336"/>
    <circle cx="45" cy="0" r="8" fill="#2196f3"/>
    <text x="22" y="20" font-family="Arial, sans-serif" font-size="10" fill="#fff" text-anchor="middle">Diversity</text>
  </g>
  
  <!-- Archaeological tools -->
  <rect x="300" y="220" width="2" height="20" fill="#8d6e63"/>
  <rect x="295" y="235" width="12" height="3" fill="#8d6e63"/>
  <text x="301" y="255" font-family="Arial, sans-serif" font-size="8" fill="#fff" text-anchor="middle">Archaeology</text>
  
  <!-- Title -->
  <text x="200" y="25" font-family="Arial, sans-serif" font-size="18" font-weight="bold" text-anchor="middle" fill="#fff">Social Sciences Grade 5</text>
  <text x="200" y="280" font-family="Arial, sans-serif" font-size="14" text-anchor="middle" fill="#fff">History & Geography of South Africa</text>
</svg>