<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 300">
  <defs>
    <linearGradient id="techBg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#607d8b;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#455a64;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="400" height="300" fill="url(#techBg)"/>
  
  <!-- Computer/laptop -->
  <rect x="150" y="120" width="100" height="60" fill="#333" rx="5"/>
  <rect x="155" y="125" width="90" height="50" fill="#000"/>
  <rect x="160" y="130" width="80" height="40" fill="#1976d2"/>
  <text x="200" y="150" font-family="Arial, sans-serif" font-size="12" fill="#fff" text-anchor="middle">CODE</text>
  <text x="200" y="165" font-family="Arial, sans-serif" font-size="8" fill="#fff" text-anchor="middle">if (learn) {</text>
  <text x="200" y="175" font-family="Arial, sans-serif" font-size="8" fill="#fff" text-anchor="middle">  create();</text>
  <text x="200" y="185" font-family="Arial, sans-serif" font-size="8" fill="#fff" text-anchor="middle">}</text>
  
  <!-- Keyboard -->
  <rect x="160" y="185" width="80" height="15" fill="#666" rx="2"/>
  <rect x="165" y="188" width="8" height="3" fill="#333"/>
  <rect x="175" y="188" width="8" height="3" fill="#333"/>
  <rect x="185" y="188" width="8" height="3" fill="#333"/>
  <rect x="195" y="188" width="8" height="3" fill="#333"/>
  <rect x="205" y="188" width="8" height="3" fill="#333"/>
  <rect x="215" y="188" width="8" height="3" fill="#333"/>
  <rect x="225" y="188" width="8" height="3" fill="#333"/>
  
  <!-- Robot -->
  <g transform="translate(80, 150)">
    <rect x="0" y="0" width="30" height="40" fill="#90a4ae" rx="5"/>
    <circle cx="10" cy="10" r="3" fill="#f44336"/>
    <circle cx="20" cy="10" r="3" fill="#f44336"/>
    <rect x="5" y="20" width="20" height="3" fill="#333"/>
    <rect x="-5" y="15" width="8" height="15" fill="#78909c"/>
    <rect x="27" y="15" width="8" height="15" fill="#78909c"/>
    <rect x="10" y="40" width="5" height="15" fill="#78909c"/>
    <rect x="15" y="40" width="5" height="15" fill="#78909c"/>
    <text x="15" y="70" font-family="Arial, sans-serif" font-size="8" fill="#fff" text-anchor="middle">Robot</text>
  </g>
  
  <!-- Gears -->
  <g transform="translate(300, 100)">
    <circle cx="0" cy="0" r="15" fill="#ff9800" stroke="#333" stroke-width="2"/>
    <circle cx="0" cy="0" r="8" fill="#333"/>
    <rect x="-2" y="-12" width="4" height="4" fill="#333"/>
    <rect x="-2" y="8" width="4" height="4" fill="#333"/>
    <rect x="-12" y="-2" width="4" height="4" fill="#333"/>
    <rect x="8" y="-2" width="4" height="4" fill="#333"/>
    
    <circle cx="25" cy="15" r="12" fill="#4caf50" stroke="#333" stroke-width="2"/>
    <circle cx="25" cy="15" r="6" fill="#333"/>
    <rect x="23" y="5" width="4" height="3" fill="#333"/>
    <rect x="23" y="22" width="4" height="3" fill="#333"/>
    <rect x="15" y="13" width="3" height="4" fill="#333"/>
    <rect x="32" y="13" width="3" height="4" fill="#333"/>
    
    <text x="12" y="45" font-family="Arial, sans-serif" font-size="8" fill="#fff" text-anchor="middle">Mechanics</text>
  </g>
  
  <!-- Circuit board -->
  <rect x="50" y="200" width="60" height="40" fill="#4caf50"/>
  <circle cx="60" cy="210" r="3" fill="#333"/>
  <circle cx="75" cy="210" r="3" fill="#333"/>
  <circle cx="90" cy="210" r="3" fill="#333"/>
  <circle cx="100" cy="210" r="3" fill="#333"/>
  <circle cx="60" cy="230" r="3" fill="#333"/>
  <circle cx="75" cy="230" r="3" fill="#333"/>
  <circle cx="90" cy="230" r="3" fill="#333"/>
  <circle cx="100" cy="230" r="3" fill="#333"/>
  <line x1="60" y1="210" x2="100" y2="210" stroke="#333" stroke-width="1"/>
  <line x1="60" y1="230" x2="100" y2="230" stroke="#333" stroke-width="1"/>
  <line x1="75" y1="210" x2="75" y2="230" stroke="#333" stroke-width="1"/>
  <text x="80" y="255" font-family="Arial, sans-serif" font-size="8" fill="#fff" text-anchor="middle">Electronics</text>
  
  <!-- 3D printer -->
  <g transform="translate(280, 180)">
    <rect x="0" y="0" width="40" height="30" fill="#333" stroke="#666" stroke-width="1"/>
    <rect x="5" y="5" width="30" height="20" fill="#1976d2" opacity="0.3"/>
    <rect x="15" y="15" width="10" height="5" fill="#ff9800"/>
    <line x1="20" y1="0" x2="20" y2="5" stroke="#666" stroke-width="2"/>
    <circle cx="20" cy="2" r="1" fill="#f44336"/>
    <text x="20" y="45" font-family="Arial, sans-serif" font-size="8" fill="#fff" text-anchor="middle">3D Print</text>
  </g>
  
  <!-- Tools -->
  <g transform="translate(30, 80)">
    <!-- Hammer -->
    <rect x="0" y="15" width="2" height="20" fill="#8d6e63"/>
    <rect x="-3" y="12" width="8" height="6" fill="#666"/>
    
    <!-- Screwdriver -->
    <rect x="10" y="15" width="2" height="20" fill="#8d6e63"/>
    <circle cx="11" cy="12" r="2" fill="#f44336"/>
    
    <!-- Wrench -->
    <rect x="20" y="15" width="2" height="15" fill="#666"/>
    <circle cx="21" cy="12" r="3" fill="#666" stroke="#333" stroke-width="1"/>
    
    <text x="15" y="45" font-family="Arial, sans-serif" font-size="8" fill="#fff" text-anchor="middle">Tools</text>
  </g>
  
  <!-- Design blueprint -->
  <rect x="150" y="50" width="50" height="35" fill="#2196f3" opacity="0.8"/>
  <line x1="155" y1="55" x2="195" y2="55" stroke="#fff" stroke-width="1"/>
  <line x1="155" y1="65" x2="185" y2="65" stroke="#fff" stroke-width="1"/>
  <line x1="155" y1="75" x2="190" y2="75" stroke="#fff" stroke-width="1"/>
  <rect x="160" y="60" width="15" height="10" fill="none" stroke="#fff" stroke-width="1"/>
  <text x="175" y="95" font-family="Arial, sans-serif" font-size="8" fill="#fff" text-anchor="middle">Design</text>
  
  <!-- Light bulb (innovation) -->
  <g transform="translate(350, 50)">
    <circle cx="0" cy="0" r="8" fill="#ffeb3b" opacity="0.8"/>
    <rect x="-2" y="8" width="4" height="6" fill="#666"/>
    <line x1="-12" y1="-8" x2="-8" y2="-4" stroke="#ffeb3b" stroke-width="2"/>
    <line x1="8" y1="-4" x2="12" y2="-8" stroke="#ffeb3b" stroke-width="2"/>
    <line x1="-12" y1="8" x2="-8" y2="4" stroke="#ffeb3b" stroke-width="2"/>
    <line x1="8" y1="4" x2="12" y2="8" stroke="#ffeb3b" stroke-width="2"/>
    <text x="0" y="25" font-family="Arial, sans-serif" font-size="8" fill="#fff" text-anchor="middle">Innovation</text>
  </g>
  
  <!-- Building blocks/structure -->
  <rect x="250" y="220" width="15" height="15" fill="#f44336"/>
  <rect x="265" y="220" width="15" height="15" fill="#2196f3"/>
  <rect x="280" y="220" width="15" height="15" fill="#4caf50"/>
  <rect x="257" y="205" width="15" height="15" fill="#ff9800"/>
  <rect x="272" y="205" width="15" height="15" fill="#9c27b0"/>
  <rect x="264" y="190" width="15" height="15" fill="#ffeb3b"/>
  <text x="272" y="255" font-family="Arial, sans-serif" font-size="8" fill="#fff" text-anchor="middle">Build</text>
  
  <!-- Title -->
  <text x="200" y="25" font-family="Arial, sans-serif" font-size="18" font-weight="bold" text-anchor="middle" fill="#fff">Technology Grade 6</text>
  <text x="200" y="280" font-family="Arial, sans-serif" font-size="14" text-anchor="middle" fill="#fff">Design, Build & Program</text>
</svg>