---
import Layout from '../../layouts/Layout.astro';
import SportsCard from '../../components/SportsCard.astro';
import sportsData from '../../data/sports.json';

const pageTitle = 'Our Sports Programs';
const pageDescription = 'Discover our diverse range of sports programs designed to promote physical fitness, teamwork, and personal development.';
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Header Start -->
  <div class="container-fluid bg-primary py-5 mb-5 page-header">
    <div class="container py-5">
      <div class="row justify-content-center">
        <div class="col-lg-10 text-center">
          <h1 class="display-3 text-white animated slideInDown">{pageTitle}</h1>
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb justify-content-center">
              <li class="breadcrumb-item"><a class="text-white" href="/">Home</a></li>
              <li class="breadcrumb-item text-white active" aria-current="page">Sports</li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </div>
  <!-- Header End -->

  <!-- Sports Start -->
  <div class="container-xxl py-5">
    <div class="container">
      <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
        <h6 class="section-title bg-white text-primary px-3">Our Sports</h6>
        <h1 class="mb-5">Building Champions Through Sport</h1>
        <p class="mb-5">Our comprehensive sports program offers opportunities for students of all ages and skill levels to participate in competitive and recreational activities. From traditional team sports to individual pursuits, we foster physical fitness, teamwork, and personal growth through sport.</p>
      </div>
      
      <!-- Featured Sports -->
      <div class="row mb-5">
        <div class="col-12">
          <h3 class="mb-4">Featured Sports</h3>
        </div>
        {sportsData.filter(sport => sport.is_featured).map((sport) => (
          <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
            <SportsCard sport={sport} />
          </div>
        ))}
      </div>

      <!-- All Sports Programs -->
      <div class="row">
        <div class="col-12">
          <h3 class="mb-4">All Sports Programs</h3>
        </div>
        {sportsData.map((sport) => (
          <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
            <SportsCard sport={sport} />
          </div>
        ))}
      </div>

      <!-- Sports Statistics -->
      <div class="row mt-5">
        <div class="col-12">
          <div class="bg-light rounded p-4">
            <h4 class="mb-4 text-center">Sports Program Statistics</h4>
            <div class="row text-center">
              <div class="col-md-3 col-6">
                <div class="counter">
                  <h2 class="text-primary">{sportsData.length}</h2>
                  <p>Sports Programs</p>
                </div>
              </div>
              <div class="col-md-3 col-6">
                <div class="counter">
                  <h2 class="text-primary">{sportsData.reduce((total, sport) => total + sport.participants, 0)}</h2>
                  <p>Active Participants</p>
                </div>
              </div>
              <div class="col-md-3 col-6">
                <div class="counter">
                  <h2 class="text-primary">{sportsData.filter(sport => sport.is_featured).length}</h2>
                  <p>Featured Programs</p>
                </div>
              </div>
              <div class="col-md-3 col-6">
                <div class="counter">
                  <h2 class="text-primary">{new Set(sportsData.flatMap(sport => sport.age_groups)).size}</h2>
                  <p>Age Categories</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Sports End -->
</Layout>

<style>
  .page-header {
    background: linear-gradient(rgba(24, 29, 56, .7), rgba(24, 29, 56, .7)), url('/img/carousel-2.jpg');
    background-position: center center;
    background-repeat: no-repeat;
    background-size: cover;
  }
  
  .section-title {
    position: relative;
    display: inline-block;
  }
  
  .breadcrumb-item + .breadcrumb-item::before {
    color: rgba(255, 255, 255, 0.5);
  }
  
  .counter h2 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }
  
  .counter p {
    font-size: 1rem;
    margin-bottom: 0;
    color: #6c757d;
  }
</style>