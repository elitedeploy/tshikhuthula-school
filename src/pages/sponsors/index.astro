---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import FilterComponent from '../../components/FilterComponent.astro';

// Get all sponsors
const allSponsors = await getCollection('sponsors');

// Sort sponsors by featured status and then by name
const sortedSponsors = allSponsors.sort((a, b) => {
  if (a.data.is_featured && !b.data.is_featured) return -1;
  if (!a.data.is_featured && b.data.is_featured) return 1;
  return a.data.name.localeCompare(b.data.name);
});

// Get unique categories for filtering
const categories = [...new Set(allSponsors.map(sponsor => sponsor.data.category))];
const featuredSponsors = allSponsors.filter(sponsor => sponsor.data.is_featured);
